<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/place_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardElevation="4dp"

        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/place_card_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- 1 Row -->
            <LinearLayout
                android:id="@+id/place_card_main_first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/place_image"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_page"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:id="@+id/place_card_main_first_row_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/place_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place Title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/place_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textSize="14sp"
                        android:textColor="#888888" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/place_card_main_first_row_distance"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/place_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 min"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/place_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.2 km"
                        android:textAlignment="viewEnd"
                        android:textSize="14sp"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- 2 Row -->
            <LinearLayout
                android:id="@+id/place_card_main_second_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Tags Column (below image, 50% width) -->
                <HorizontalScrollView
                    android:id="@+id/tags_scroll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:paddingEnd="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/tags_scroll_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tag1"
                            android:layout_margin="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_maps"
                            android:layout_gravity="center_vertical" />

                        <ImageView
                            android:id="@+id/tag2"
                            android:layout_margin="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_maps"
                            android:layout_gravity="center_vertical" />
                    </LinearLayout>
                </HorizontalScrollView>


                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:text="Open"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:paddingEnd="8dp"
                    android:textColor="#666666" />

                <LinearLayout
                    android:id="@+id/place_card_main_second_row_rating"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end|center_vertical">

                    <RatingBar
                        android:id="@+id/place_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:isIndicator="true"
                        android:rating="4"
                        android:layout_gravity="center_vertical"
                        style="?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>