<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextTitleLight">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">52sp</item>
        <item name="android:fontFamily">@font/impact</item>
        <item name="boxBackgroundColor">?android:windowBackground</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextSubtitleLight">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="boxBackgroundColor">?android:windowBackground</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH1">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH2">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH3">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Form -->

    <style name="ButtonFullSize" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonFullSizeFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonReport" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Report</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">?android:windowBackground</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="EditText" parent="EditText" tools:ignore="ResourceCycle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:height">48dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">?android:windowBackground</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Spiner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/blue_600</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerDialogButton</item>
    </style>

    <style name="DatePickerDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue_600</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Email" parent="TextField">
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_inp_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Password" parent="TextField">
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_inp_password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- TabLayout -->
    <style name="TabMenu">
        <item name="android:background">?android:windowBackground</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="tabSelectedTextColor">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>