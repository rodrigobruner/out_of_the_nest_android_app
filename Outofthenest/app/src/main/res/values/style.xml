<resources>
    <style name="Theme.OutOfTheNest.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextTitleLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">52sp</item>
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextSubtitleLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="TextH3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- Form -->

    <style name="ButtonFullSize" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="ButtonFullSizeFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="Email" parent="TextField">
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Password" parent="TextField">
        <item name="endIconMode">clear_text</item>
        <item name="startIconDrawable">@drawable/ic_password2</item>
        <item name="android:inputType">textPassword</item>
    </style>


    <!-- TabLayout -->

    <style name="TabMenu">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/secondary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>