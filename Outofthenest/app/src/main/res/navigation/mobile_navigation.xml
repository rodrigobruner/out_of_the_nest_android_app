<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_maps">

    <fragment
        android:id="@+id/navigation_maps"
        android:name="app.outofthenest.ui.maps.MapsFragment"
        android:label="@string/nav_title_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_events"
        android:name="app.outofthenest.ui.events.EventsFragment"
        android:label="@string/nav_title_events"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="app.outofthenest.ui.notifications.NotificationsFragment"
        android:label="@string/nav_title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="app.outofthenest.ui.profile.ProfileFragment"
        android:label="@string/nav_title_profile"
        tools:layout="@layout/fragment_profile" />


</navigation>